choice
	prompt "MPU Product"
	default SAMA5D2
	help
	  Select which MPU device your board is based on

source "device/sama5d2/Config.in.device"
source "device/sam9x60/Config.in.device"
endchoice

config SPI_BUS_MAX
	int
	default 5 if SAM9A60
	default 1 if SAMA5D2

config SPI_IOSET_MAX
	int
	default 6 if SAM9X60
	default 3 if SAMA5D2

config QSPI_BUS_MAX
	int
	default 0 if SAM9X60
	default 1 if SAMA5D2

config QSPI_IOSET_MAX
	int
	default 1 if SAM9X60
	default 3 if SAMA5D2

config DEVICENAME
	string
	default "sama5d2" if SAMA5D2
	default "sam9x60" if SAM9X60
	default "sama5d3" if SAMA5D3_BOARD
	default "sama5d4" if SAMA5D4_BOARD
	default "at91sam9x5"	if AT91SAM9X5_BOARD

config AT91SAM9X5
	select CORE_ARM926EJS
	select CPU_HAS_TWI0
	select CPU_HAS_TWI1
	select CPU_HAS_TWI2
	select CPU_HAS_SCKC
	select CPU_HAS_PIO3
	select CPU_HAS_PMECC
	select CPU_HAS_HSMCI0
	select CPU_HAS_HSMCI1
	select CPU_HAS_SPI
	select CPU_HAS_SCLK_BYPASS
	bool

config SAMA5D3X
	select CORE_CORTEX_A5
	select CPU_HAS_TWI0
	select CPU_HAS_TWI1
	select CPU_HAS_TWI2
	select CPU_HAS_AES
	select CPU_HAS_SCKC
	select CPU_HAS_PIO3
	select CPU_HAS_PMECC
	select CPU_HAS_HSMCI0
	select CPU_HAS_HSMCI1
	select CPU_HAS_HSMCI2
	select CPU_HAS_SPI
	select CPU_HAS_SCLK_BYPASS
	bool

config SAMA5D4
	select CORE_CORTEX_A5
	select CPU_HAS_TWI0
	select CPU_HAS_TWI1
	select CPU_HAS_TWI2
	select CPU_HAS_TWI3
	select CPU_HAS_AES
	select CPU_HAS_L2CC
	select CPU_HAS_SCKC
	select CPU_HAS_H32MXDIV
	select CPU_HAS_PIO3
	select CPU_HAS_PMECC
	select CPU_HAS_TRUSTZONE
	select CPU_HAS_HSMCI0
	select CPU_HAS_HSMCI1
	select CPU_HAS_SPI
	bool
