config	HAVE_DOT_CONFIG
	bool
	default y

config CONFIG_BOARDNAME
	string "Board Name"
	default "at91sam9g20ek"
	help
	  Name of the target

choice
	prompt "Board Type"
	default	CONFIG_AT91SAM9G20EK
	help
	  Select which board you want to build for

config	CONFIG_AT91SAM9G20EK
	bool "at91sam9g20ek"
	select CONFIG_SDRAM
	select ALLOW_DATAFLASH
	select ALLOW_NANDFLASH
	select ALLOW_CPU_CLK_400MHZ
	select ALLOW_CRYSTAL_18_432MHZ
	select ALLOW_BOOT_FROM_DATAFLASH_CS0
	select ALLOW_BOOT_FROM_DATAFLASH_CS1
	select ALLOW_DATAFLASH_RECOVERY
	help
	  Use the AT91SAM9G20EK Development board

config	CONFIG_AT91SAM9M10G45EK
	bool "at91sam9m10g45ek"
	select CONFIG_DDR2
	select ALLOW_DATAFLASH
	select ALLOW_NANDFLASH
	select ALLOW_SDCARD
	select ALLOW_HSMCI
	select ALLOW_CPU_CLK_400MHZ
	select ALLOW_CRYSTAL_18_432MHZ
	select ALLOW_BOOT_FROM_DATAFLASH_CS0
	select ALLOW_DATAFLASH_RECOVERY
	help
	  Use the AT91SAM9M10G45EK Development board
	  Can also be used for AT91SAM9G45

config	CONFIG_AT91SAM9X5EK
	bool "at91sam9x5ek"
	select CONFIG_DDR2
	select ALLOW_DATAFLASH
	select ALLOW_NANDFLASH
	select ALLOW_SDCARD
	select ALLOW_HSMCI
	select ALLOW_CPU_CLK_400MHZ
	select ALLOW_CRYSTAL_12_000MHZ
	select ALLOW_BOOT_FROM_DATAFLASH_CS0
	select ALLOW_DATAFLASH_RECOVERY
	select ALLOW_PIO3
	select CPU_HAS_PMECC
	help
	  Use the AT91SAM9X5EK Development board

config	CONFIG_AT91SAM9N12EK
	bool "at91sam9n12ek"
	select CONFIG_DDR2
	select ALLOW_DATAFLASH
	select ALLOW_NANDFLASH
	select ALLOW_SDCARD
	select ALLOW_HSMCI
	select ALLOW_CPU_CLK_400MHZ
	select ALLOW_CRYSTAL_12_000MHZ
	select ALLOW_BOOT_FROM_DATAFLASH_CS0
	select ALLOW_DATAFLASH_RECOVERY
	select ALLOW_PIO3
	select CPU_HAS_PMECC
	help
	  Use the AT91SAM9N12EK Development board

endchoice

config CONFIG_CHIP
	string
	default "AT91SAM9G20"	if CONFIG_AT91SAM9G20EK
	default "AT91SAM9M10"	if CONFIG_AT91SAM9M10G45EK
	default "AT91SAM9X5"	if CONFIG_AT91SAM9X5EK
	default "AT91SAM9N12"	if CONFIG_AT91SAM9N12EK
	help
	  Name of the board, A Board Support package
	  (BSP) must be available.

config CONFIG_BOARD
	string
	default "at91sam9g20ek"	if CONFIG_AT91SAM9G20EK
	default "at91sam9x5ek"	if CONFIG_AT91SAM9X5EK
	default "at91sam9n12ek"	if CONFIG_AT91SAM9N12EK
	default "at91sam9m10g45ek"	if CONFIG_AT91SAM9M10G45EK
	help
	  Name of the board, A Board Support package
	  (BSP) must be available.

config CONFIG_MACH_TYPE
	string
	default "1624"	if CONFIG_AT91SAM9G20EK		# 1624
	default "1830"	if CONFIG_AT91SAM9M10G45EK	# 1830
	default "3373"	if CONFIG_AT91SAM9X5EK		# 3373
	default "9999"	if CONFIG_AT91SAM9N12EK		# 3373
	help

config CONFIG_LINK_ADDR
	string
	default "0x300000" if CONFIG_AT91SAM9N12EK
	default "0x000000"
	help

config CONFIG_DATA_SECTION_ADDR
	string
	help

config CONFIG_TOP_OF_MEMORY
       string
	default "0x304000"	if CONFIG_AT91SAM9G20EK
	default "0x30A000"	if CONFIG_AT91SAM9M10G45EK
	default "0x308000"	if CONFIG_AT91SAM9X5EK
	default "0x308000"	if CONFIG_AT91SAM9N12EK
	help

choice
	prompt "Crystal Frequency"
	default CONFIG_CRYSTAL_18_432MHZ
	help
	  Select the crystal frequency

config CONFIG_CRYSTAL_12_000MHZ
	bool "Build for use of an 12.000 MHz crystal"
	depends on ALLOW_CRYSTAL_12_000MHZ

config CONFIG_CRYSTAL_16_000MHZ
	bool "Build for use of an 16.000 MHz crystal (not yet supported)"
	depends on ALLOW_CRYSTAL_16_000MHZ

config CONFIG_CRYSTAL_16_36766MHZ
	bool "Build for use of an 16.36766 MHz crystal"
	depends on ALLOW_CRYSTAL_16_36766MHZ

config CONFIG_CRYSTAL_18_432MHZ
	bool "Build for use of an 18.432 MHz crystal"
	depends on ALLOW_CRYSTAL_18_432MHZ

endchoice

config ALLOW_CRYSTAL_12_000MHZ
	bool

config ALLOW_CRYSTAL_16_000MHZ
	bool

config ALLOW_CRYSTAL_16_36766MHZ
	bool

config ALLOW_CRYSTAL_18_432MHZ
	bool

config CONFIG_CRYSTAL
	string
	default "CRYSTAL_12_000MHZ"	if CONFIG_CRYSTAL_12_000MHZ 
	default "CRYSTAL_16_000MHZ"	if CONFIG_CRYSTAL_16_000MHZ
	default "CRYSTAL_16_36766MHZ"	if CONFIG_CRYSTAL_16_36766MHZ
	default "CRYSTAL_18_432MHZ"	if CONFIG_CRYSTAL_18_432MHZ
	default "CRYSTAL_18_432MHZ"

choice
	prompt "CPU clock"
	default CONFIG_CPU_CLK_200MHZ

config	CONFIG_CPU_CLK_166MHZ
	bool "166 MHz"
	depends on ALLOW_CPU_CLK_166MHZ

config	CONFIG_CPU_CLK_180MHZ
	bool "180 MHz"
	depends on ALLOW_CPU_CLK_180MHZ

config	CONFIG_CPU_CLK_200MHZ
	bool "200 MHz"
	depends on ALLOW_CPU_CLK_200MHZ

config	CONFIG_CPU_CLK_240MHZ
	bool "240 MHz"
	depends on ALLOW_CPU_CLK_240MHZ
	depends on !DISABLE_CPU_CLK_240MHZ

config	CONFIG_CPU_CLK_266MHZ
	bool "266 MHz"
	depends on ALLOW_CPU_CLK_266MHZ

config	CONFIG_CPU_CLK_400MHZ
	bool "400 MHz"
	depends on ALLOW_CPU_CLK_400MHZ

endchoice

config	ALLOW_CPU_CLK_166MHZ
	bool

config	ALLOW_CPU_CLK_180MHZ
	bool

config	ALLOW_CPU_CLK_200MHZ
	bool

config	ALLOW_CPU_CLK_240MHZ
	bool

config	ALLOW_CPU_CLK_266MHZ
	bool

config	ALLOW_CPU_CLK_400MHZ
	bool

config	DISABLE_CPU_CLK_240MHZ
	bool
	default n

choice
	prompt "Bus Speed"
	default CONFIG_BUS_SPEED_133MHZ
	help
	  Select the speed of the bus

config CONFIG_BUS_SPEED_83MHZ
	bool "83 MHz"
	depends on ALLOW_CPU_CLK_166MHZ

config CONFIG_BUS_SPEED_90MHZ
	bool "90 MHz"
	depends on ALLOW_CPU_CLK_180MHZ

config CONFIG_BUS_SPEED_100MHZ
	bool "100 MHz"
	depends on ALLOW_CPU_CLK_200MHZ

config CONFIG_BUS_SPEED_133MHZ
	bool "133 MHz"
	depends on ALLOW_CPU_CLK_400MHZ || ALLOW_CPU_CLK_266MHZ

endchoice
